        <h1>Bryant's Tic-Tac-Toe with Socket.io</h1>
    </header>
    
    <main>
        <div id="player1">
            <img src="resources/imgs/player1.png" id="player1-img">
        </div>
        <div id="player2">
            <img src="resources/imgs/player2.png" id="player2-img">
        </div>
        <table id="gameboard">
                <tr>
                    <td id="0" class="square">1</td>
                    <td id="1" class="square">2</td>
                    <td id="2" class="square">3</td>
                </tr>
                <tr>
                    <td id="3" class="square">4</td>
                    <td id="4" class="square">5</td>
                    <td id="5" class="square">6</td>
                </tr>
                <tr>
                    <td id="6" class="square">7</td>
                    <td id="7" class="square">8</td>
                    <td id="8" class="square">9</td>
                </tr>
        </table>
    </main>
    <section>
        <h3 id="turn">
            Please click "New Game" below to start.
        </h3>
        <a href="#" id="new-game" class="btn">New Game</a>
